<%= form_for @bill, :html => { :class => "form-horizontal bill" } do |f| %>

    <% if @bill.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @bill.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>

  </div>

    <div class="control-group">
      <%= f.label :income, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :income, :class => 'form-control' %>
      </div>

    </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            bills_path, :class => 'btn btn-default' %>

<% end %>
